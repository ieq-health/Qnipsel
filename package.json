{
  "name": "templateq",
  "version": "0.8.0",
  "description": "Wordpress theme to power qnipsel",
  "main": "webpack.config.js",
  "scripts": {
    "css-main": "npm-run-all --parallel css-lint css-compile --sequential css-prefix css-minify",
    "css-lint": "stylelint --syntax scss \"scss/**/*.scss\"",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/main.scss dist/css/main.css",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/css/main.min.css dist/css/main.css",
    "css-prefix": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "watch-css-main": "nodemon --watch scss/ --ext scss --exec \"npm run css-main\""
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "no-descending-specificity": null
    }
  },
  "repository": {
    "type": "git",
    "url": "git@git.trbk.it:ieq-health/qnipsel.git"
  },
  "author": "Christian Brassat <christian@brassat.eu>",
  "license": "ISC",
  "dependencies": {
    "bulma": "^0.7.4",
    "clean-css": "^4.2.1",
    "clean-css-cli": "^4.2.1",
    "event-stream": "^4.0.1",
    "node-sass": "^4.13.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.23",
    "postcss-cli": "^6.1.2",
    "shx": "^0.3.2",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.13.0"
  }
}
